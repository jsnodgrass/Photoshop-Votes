extends ../layouts/layout

block subject
  header#subject.wrap
    - if (is_self)
      h1 Your Profile
    - else
      h1 #{user.name}'s Profile


block content
  section#main.wrap
    .row
      .span4
        - if(typeof user.avatar[0] !== 'undefined')
          img(src=user.avatar[0].square)
        - else
          img(src = "http://placehold.it/220x220")
      .span12
        h6 About:
        #{user.about}
  