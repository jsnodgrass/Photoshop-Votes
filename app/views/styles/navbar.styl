#navbar
  position relative
  width 970px
  margin -20px
  height 65px
  background-color #333
  color #fff
  text-align right
  border-radius 10px 10px 0 0

  h1
    margin 0
    position absolute
    top 5px
    left 10px
    a
      text-decoration none
      color #fff

  .secondary-nav
    position absolute
    top 0px 
    right 10px
    padding 0 10px 5px 0px
    li
      padding 5px
      border-radius(0, 0, 5px, 5px)
      box-shadow(inset, 0, 0, 0, #333)
      margin 0 2px
      transition(all .2s ease-in-out)
      &:hover
        background-color #aaa
        box-shadow(inset, 0, 0, 4px, #333)
        a 
          color #333
      a 
        padding 5px
  .topbar-wrapper
    span 
      position absolute
      top 45px
      right 25px
      color #fff