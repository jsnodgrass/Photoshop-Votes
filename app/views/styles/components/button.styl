.button
  z-index 1
  cursor pointer
  width 100px
  font-size 24px
  font-weight bold
  color #aaa
  width 32px
  height 32px
  background-color #333
  border-radius(5px)
  box-shadow(0 0 0 #000)
  text-align center
  transition(all,.2s,ease-in-out)
  span
    display block
    height 0
    width 110px
    overflow hidden
    opacity 0
    font-size 12px
    background-color #333
    border-radius(2px)
    padding 2px
    position absolute
    top 35px
    left 0
    box-shadow(0,0,5px,#000)
    transition(all,.3s,ease-in-out)

  &.voter
    background-color #333
    border 1px solid #222
    width 100px
    height 100px
    span
      top 105px
      font-size 16px

    &:hover
      box-shadow(0 0 25px -10px #fff)
      span
        height 18px
        width 150px

  &:hover

    box-shadow(0 0 15px -3px #000)
    span
      height 15px
      width 110px
      opacity 1

.delete_button
  position absolute
  z-index 1
  top -10px
  right -10px
  height 20px
  width 20px
  cursor pointer
  span
    display block
    font-weight bold
    color #fff
    text-align center
    height 0
    width 65px
    overflow hidden
    opacity 0
    font-size 12px
    background-color #ff0000
    border-radius(2px)
    padding 2px
    position absolute
    top 3px
    left 27px
    box-shadow(0,0,5px,#000)
    transition(all,.2s,ease-in-out)

  img
    height 20px
    transition(all, .2s, ease-in-out)
  &:hover
    img
      height 25px
    span
      height 14px
      width 90px
      opacity 1
