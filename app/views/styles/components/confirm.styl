.confirm_box
  height 0px
  opacity 0
  width 100px
  background-color #333
  position relative
  color #fff
  font-weight bold
  text-align center
  border-radius(10px)
  padding 0px
  transition(all, .3s, ease-in-out)
  overflow hidden
  span
    padding 5px
    border-radius 5px
  .delete
    position absolute
    bottom 10px 
    left 15px
    background-color #009900
    padding 5px 10px
    box-shadow(inset,0,0,5px,#aaa)
    transition(all, .3s, ease-in-out)
    cursor pointer
    &:hover
      background-color #00ff00
      box-shadow(inset,0,0,5px,#fff)
  .cancel
    position absolute
    bottom 10px 
    right 15px
    background-color #a80000
    padding 5px 13px
    box-shadow(inset,0,0,5px,#aaa)
    transition(all, .3s, ease-in-out)
    cursor pointer
    &:hover
      background-color #ff0000
      box-shadow(inset,0,0,5px,#fff)