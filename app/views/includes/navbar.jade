nav.topbar-wrapper
  h1: a(href='/') Photoshop Contest
  ul.nav.secondary-nav
    - if (is_logged_in)
      - if (is_admin)
        li: a(href='/admin') Admin
      - if (is_contest_admin && !is_admin)
        li: a(href='/contests/admin') Admin
      li: a(href=account_route) Your profile
      li: a(href=account_route+'/edit') Account
      li: a(href="/contests") Contests
      li: a(href=route('logout')) Logout
    - else
      li: a(href="/contests") Contests
      li: a(href=route('register')) Create an account
      li: a(href=route('login')) Sign in
  - if (is_logged_in)
    span.plain.pull-right Welcome back, #{current_user.name}