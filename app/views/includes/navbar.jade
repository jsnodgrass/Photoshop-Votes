nav.topbar-wrapper
  h1: a(href='/') Photoshop Contest
  ul.nav.secondary-nav
    - if (is_logged_in)
      - if (is_admin)
        li: a(href='/admin') Admin
      - if (is_contest_admin && !is_admin)
        li: a(href='/contests/admin') Admin
      li: a(href="/users/"+current_user._id) Your profile
      li: a(href='/users/'+current_user._id+'/edit') Account
      li: a(href="/contests") Contests
      li: a(href='/sessions/logout') Logout
    - else
      li: a(href="/contests") Contests
      li: a(href='/users/new') Create an account
      li: a(href='/sessions/login') Sign in
  - if (is_logged_in)
    span.plain.pull-right Welcome back, #{current_user.name}